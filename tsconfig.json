{
	"compilerOptions": {
	  "target": "es6",
	  "module": "commonjs",
	  "jsx": "react",
	  "strict": true,
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "forceConsistentCasingInFileNames": true,
	  "outDir": "./dist",
	  "allowSyntheticDefaultImports": true,
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
  }